@page
@model Web.Pages.NewPostModel
@{
    ViewData["Title"] = "New";
}

<form method="post">
    <fieldset>
        <legend>New</legend>

        @*PostTypeID = 1*@

        @*AuthorIDs = "2"*@

        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" />
        </div>

        <div class="form-group">
            <label asp-for="Slug"></label>
            <input asp-for="Slug" />
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" />
        </div>

        <div class="form-group">
            <label asp-for="DatePublished"></label>
            <input asp-for="DatePublished" />
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" />
        </div>

        <div class="form-group">
            <input-checkbox id="isPublic" label="Publish"></input-checkbox>
        </div>

        <div class="form-group">
            <label asp-for="Body"></label>
            <textarea asp-for="Body" id="editor" rows="10"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Excerpt"></label>
            <textarea asp-for="Excerpt" rows="3"></textarea>
        </div>

        <div class="form-group">
            <button type="submit">Save</button>
        </div>
    </fieldset>
</form>

@section Scripts {
    <script src="~/lib/ckeditor.js" asp-append-version="true"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}